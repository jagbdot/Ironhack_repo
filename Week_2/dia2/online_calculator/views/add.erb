<!doctype html>
<html>
  <head>
    <title>Add | Online Calculator</title>
  </head>
<body>

  <h1>Add</h1>
  <form action="/calculate_sum" method="POST">
    <input type="number" name="first_number" placeholder="1st number">
    <input type="number" name="second_number" placeholder="2nd number">
    <button type="submit" name="operation" value="addition">Calculate sum</button>
  </form>
  <form action="/calculate_substract" method="POST">
    <button type="submit" name="operation" value="substraction">Calculate substraction</button>
  </form>
  <form action="/calculate_multiplication" method="POST">
    <button type="submit" name="operation" value="multiplication">Calculate multiplication</button>
  </form>
  <form action="/calculate_division" method="POST">
    <button type="submit" name="operation" value="division">Calculate division</button>
  </form>

</body>
</html>